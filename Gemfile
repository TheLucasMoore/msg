source 'https://rubygems.org'

gem 'sinatra'
gem 'sinatra-contrib' # gives us auto-reload
gem 'thin' # recommended in the sinatra docs
gem 'rake'
gem 'require_all'

# Database Tools
gem 'pg'
gem 'sinatra-activerecord'
gem 'activerecord', :require => 'active_record'

gem 'faker'

group :development, :test do
  gem 'pry'
  gem 'rb-readline'
end

group :test do
  gem 'rack-test'
  gem 'rspec'
end